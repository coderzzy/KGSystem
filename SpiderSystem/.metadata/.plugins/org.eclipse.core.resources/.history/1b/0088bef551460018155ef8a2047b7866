package org.SpiderSystem.Web.controller;

import org.SpiderSystem.Web.service.SpiderService;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping(value = "/spider")
public class SpiderController {
	
	@RequestMapping(value="/start")
	public String start(){
		SpiderService.start("http://www.199it.com","http://www.199it.com/.*html");
		return "admin_index";
	}
	
	@RequestMapping(value="/stop")
	public String stop(){
		SpiderNewsService.stop();
		return "admin_index";
	}
	
	@RequestMapping(value="/check")
	public String check(Model model){
		SpiderNewsService.check(model);
		return "spider_result";
	}
}
