  <script type="text/javascript">
  	function start(){
  		$.ajax({
	             url: "${pageContext.request.contextPath}/newsDataProcess/word_segment",
	             type: "POST",
	             dataType: "json",
	             /*
	             data: {
	               "newsId": newsId
	             },
	             */
	             async: false,
	             success: function(data) {
	            	 if(data.result == "success"){
	            		 alert("正在数据分词和统计词频...");
	                 }else{
	                	 alert("数据读取失败");
	                 }
	             },
	             error: function() {
	               alert("访问服务器失败，...请检查网络连接，如确实怀疑服务器问题请联系Zzy");
	             }
	           });
  	}
  	
  	
  	function check(){
  		$.ajax({
            url: "${pageContext.request.contextPath}/newsDataProcess/segmentProcess_check",
            type: "POST",
            dataType: "json",
            async: false,
            success: function(data) {
           	 if(data.result == "success"){
               	 // alert("操作成功");
               	 // alert(data.array[0]);
               	 	alert("恭喜,已完成");   	 
                }else if(data.result == "run"){
               	 	alert("尚在进行中...");
                }else{
                	alert("尚未开始运行...")
                }
            },
            error: function() {
              alert("访问服务器失败，...请检查网络连接，如确实怀疑服务器问题请联系Zzy");
            }
		});
  	}
  	
  	
  	function show(index){
  		$.ajax({
	             url: "${pageContext.request.contextPath}/log/show_frequency",
	             type: "POST",
	             dataType: "json",
	             data:{
	            	 "index":index
	             },
	             async: false,
	             success: function(data) {
	            	 if(data.result == "success"){
	                	 alert("正在绘制图表,请稍等...");
	            		 var myChart = echarts.init(document.getElementById('data_frequency'+index));
	            		 var mydata = [];
	            		 
	            		 for(var i=0;i<data.string.length;i++){
	            			 mydata.push({
	            				 name:data.string[i],
	            				 value:data.integer[i]
	            			 })
	            		 }
	            		 
	            		 // console.log(mydata);
	            		 /*
	       	            for (var key in keywords) {
	       	                mydata.push({
	       	                    name: key,
	       	                    value: Math.sqrt(keywords[key])
	       	                })
	       	            }*/
	       	         	var maskImage = new Image();
	        	        option = {
	        	              title: {
	        	                  text: data.title,
	        	                  // link: 'http://www.google.com/trends/hottrends'
	        	              },
	        	              tooltip: {
	        	                  show: true
	        	              },
	        	              series: [{
	        	                  name: 'wordCloud',
	        	                  type: 'wordCloud',
	        	                  size: ['80%', '80%'],
	        	                  textRotation : [0, 45, 90, -45],
	        	                  textPadding: 0,
	        	                  shape: 'pentagon',
	        	                  maskImage: maskImage,
	        	                  autoSize: {
	        	                      enable: true,
	        	                      minSize: 14
	        	                  },
	        	                  data:mydata
	        	              }]
	        	          };
	        	          
	        	          	maskImage.onload = function () {
	        	          		alert("lalala");
	        	                option.series[0].maskImage
	        	                myChart.setOption(option);
	        	            }

	        	            maskImage.src = '${pageContext.request.contextPath}/static/images/logo.png';

	        	          // 为echarts对象加载数据 
	        	          // myChart.setOption(option); 
	                 }else{
	                	 alert("词频数据读取失败");
	                 }
	             },
	             error: function() {
	               alert("访问服务器失败，...请检查网络连接，如确实怀疑服务器问题请联系Zzy");
	             }
  		});
  		
  		function createRandomItemStyle() {
  			return {
  	                  normal: {
  	                      color: 'rgb(' + [
  	                          Math.round(Math.random() * 160),
  	                          Math.round(Math.random() * 160),
  	                          Math.round(Math.random() * 160)
  	                      ].join(',') + ')'
  	                  }
  	              };
  	   	}
  	}
  	
